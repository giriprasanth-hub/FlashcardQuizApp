<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Logo -->
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <!-- App Title -->
    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flashcard Quiz App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_below="@id/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Buttons -->
    <Button
        android:id="@+id/btn_add_flashcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#FF5722"
        android:text="Add Flashcards"
        android:textColor="#FFFFFF"
        android:layout_below="@id/tv_app_title"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btn_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#03A9F4"
        android:text="Start Quiz"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btn_add_flashcard" />

    <Button
        android:id="@+id/btn_view_flashcards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#4CAF50"
        android:text="View Flashcards"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btn_quiz" />

    <!-- About Button -->
    <Button
        android:id="@+id/btn_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btn_view_flashcards" />

    <!-- Footer -->
    <TextView
        android:id="@+id/tv_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Made by Giriprasanth"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>
