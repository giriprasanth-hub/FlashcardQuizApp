<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF5722">

    <!-- Logo -->
    <ImageView
        android:id="@+id/img_splash_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher23"
        android:layout_centerInParent="true" />

    <!-- App Title -->
    <TextView
        android:id="@+id/tv_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flashcard Quiz"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_below="@id/img_splash_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Footer -->
    <TextView
        android:id="@+id/tv_splash_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Made by Giriprasanth"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>
